

<%= simple_form_for @request do |f| %>
  <%= f.input :topic, label: "What would you like to discuss?", placeholder: "Freelance life, Ruby on Rails...", class: "request-topic" %>
  <%= f.input :skill, collection: @skills, class: "request-skill" %>
  <%= f.collection_radio_buttons :start_time, [[Date.today, 'Today'], [Date.tomorrow, 'Tomorrow']], :first, :last, class: "request-time" %>
  <%= f.submit " Submit ", :class => "btn btn-primary" %>
<% end %>
