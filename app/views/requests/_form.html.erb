<%= simple_form_for request do |f| %>
  <%= f.input :topic, label: false, placeholder: "Freelance life, Ruby on Rails..." %>
  <%= f.input :skill, label: false, prompt: 'Skills', collection: skills  %>
  <%= f.input :start_time, label: false, as: :select, collection: [['Today', Date.today], ['Tomorrow', Date.tomorrow]] %>
  <%= f.submit " Submit ", :class => "btn btn-primary" %>
<% end %>
