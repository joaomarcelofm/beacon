<div class="dashboard">
  <%= render 'shared/navbar' %>
  <div class="dash-wrapper">
    <div id="side-bar">
      <%= render 'dash_side_bar' %>
    </div>
    <div class="dash-container">
      <div class="meeting-search">
        <p>Don't be shy, search for your new yak buddy now!</p>
        <div class="form-inline" >
          <%= render 'requests/form', request: @request, skills: @skills %>
        </div>
      </div>
      <div class="dash-feed">
        <h2>Your Yaktivity</h2>
        <div class="yak-feed">
          <% current_user.meetings.reverse_each do |meeting| %>
          <div class="yaktivity">
            <div class='yaktivity-users'>
              <%= image_tag meeting.request.user.image, class: "avatar user-1" %>
              <%= image_tag meeting.request.receiver.image, class: "avatar user-2" %>
            </div>
            <div class='yaktivity-title'>
              <h3><%= meeting.request.user.first_name %> and <%= meeting.request.receiver.first_name %></h3>
              <div class="yaktivity-details">
                <p><%= meeting.request.topic %> -- status: <%= meeting.request.status %></p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

